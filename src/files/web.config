<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.web>
        <customErrors mode="off" />
    </system.web>
    <system.webServer>
        <httpErrors existingResponse="Replace" errorMode="Custom">
            <remove statusCode="404" subStatusCode="-1"/>
            <error statusCode="404" prefixLanguageFilePath="" path="404.html" responseMode="File"/>
        </httpErrors>
        <defaultDocument>
            <files>
                <add value="index.xml" />
                <add value="index.html" />
            </files>
        </defaultDocument>
        <rewrite>
            <rules>
                <clear/>
                <rule name="OldHtmlUrls" stopProcessing="true">
                    <match url="(.+)\.html$" />
                    <action type="Redirect" url="{R:1}/" appendQueryString="false" />
                </rule>
                <rule name="OldYearMonthCategories" stopProcessing="true">
                    <match url="^(2[0-9]{3})/([0-1]{1}[1-9]{1})/{0,1}$" />
                    <action type="Redirect" url="/archives/" appendQueryString="false" />
                </rule>
                <rule name="OldYearCategories" stopProcessing="true">
                    <match url="^(2[0-9]{3})/{0,1}$" />
                    <action type="Redirect" url="/archives/" appendQueryString="false" />
                </rule>
                <rule name="feed" stopProcessing="true">
                    <match url="^feed$" />
                    <action type="Rewrite" url="/rss/" appendQueryString="false" />
                </rule>
            </rules>
            <rewriteMaps>
                <rewriteMap name="StaticRewrites" defaultValue="">
                    <add key="/atom.xml"
                         value="/feed.xml"/>
                </rewriteMap>
            </rewriteMaps>
        </rewrite>
    </system.webServer>
</configuration>
